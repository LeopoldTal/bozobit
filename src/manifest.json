{
	"manifest_version": 2,
	"name": "bozobit",
	"version": "0.1.0",
	
	"description": "Lets you flag Twitter users as bozos",
	
	"icons": {
		"48": "assets/funnel-logo-48.png"
	},
	
	"permissions": ["storage"],
	
	"content_scripts": [
		{
			"matches": ["*://twitter.com/*"],
			"js": ["bozobit.js"],
			"css": ["bozobit.css"]
		}
	],
	
	"applications": {
		"gecko": { "id": "bozobit-twitter@leopold" }
	}
}
